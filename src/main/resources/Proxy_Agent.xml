<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 	http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentNode.xml"/>
    <import resource="classpath:de/dailab/jiactng/agentcore/conf/Agent.xml"/>
    <import resource="classpath:de/dailab/jiactng/basicservices/webserver/conf/webserver.xml"/>
    <import resource="classpath:de/dailab/jiactng/rsga/conf/rsga.xml"/>


    <bean name="ProxyAgentNode" parent="NodeWithJMX" scope="prototype">
        <property name="agentNodeBeans">
            <list merge="true">
                <ref bean="WebServer"/>
            </list>
        </property>
        <property name="agents">
            <list>
                <ref bean="ChariotRESTfulProviderAgent"/>
                <ref bean="ProxyAgent"/>
            </list>
        </property>
        <property name="overwriteDiscoveryURI" value="smartmulticast://default?group=chariot"/>
    </bean>

    <bean name="ProxyAgent" parent="NonBlockingAgent" scope="prototype">
        <property name="agentBeans">
            <list>
                <ref bean="ProxyAgentBean"/>
            </list>
        </property>
    </bean>

    <bean name="ProxyAgentBean" class="com.gtarc.chariot.proxyagent.ProxyAgent">
        <property name="executionInterval" value="1000"/>
        <property name="logLevel" value="info"/>
    </bean>

    <bean name="ChariotRESTfulProviderAgent" parent="RESTfulProviderAgent">
        <property name="agentBeans">
            <list>
                <ref bean="MyRESTfulProviderBean" />
            </list>
        </property>
    </bean>

    <bean name="MyRESTfulProviderBean" parent="RESTfulProviderBean">
        <property name="contextPath" value="/chariot" />
    </bean>
</beans>

