<?xml version="1.0" encoding="UTF-8" ?>

<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="classpath:de/dailab/jiactng/agentcore/conf/AgentNode.xml" />
    <import resource="classpath:de/dailab/jiactng/agentcore/conf/Agent.xml" />

    <bean name="GatewayNode" parent="NodeWithJMX" scope="prototype">
        <property name="agentNodeBeans">
            <list>
                <ref bean="ChariotStaticGatewayBroker" />
                <ref bean="ChariotDirectory" />
            </list>
        </property>
        <property name="overwriteDiscoveryURI" value="smartmulticast://default?group=chariot"/>
    </bean>

    <bean name="ChariotStaticGatewayBroker" class="de.dailab.jiactng.agentcore.comm.broker.ActiveMQBroker" scope="prototype" lazy-init="true">
        <property name="persistent" value="false" />
        <property name="connectors">
            <set>
                <ref bean="ChariotStaticGatewayConnector" />
            </set>
        </property>
    </bean>

    <bean name="ChariotStaticGatewayConnector" class="de.dailab.jiactng.agentcore.comm.broker.ActiveMQTransportConnector" scope="prototype" lazy-init="true">
        <property name="networkURI" value="static:(failover:(tcp://127.0.0.1:45678))" />
        <property name="duplex" value="true" />
        <property name="networkTTL" value="255" />
        <property name="transportURI" value="tcp://0.0.0.0:0" />
    </bean>

    <bean name="ChariotDirectory" class="de.dailab.jiactng.agentcore.directory.DirectoryAgentNodeBean" scope="prototype" lazy-init="true">
        <property name="messageTransport">
            <ref bean="StandardJMSMessageTransport" />
        </property>
    </bean>
</beans>